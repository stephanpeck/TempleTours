<div>
    <div id="accordion">
        @*Monday Card + times*@
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                        Monday
                    </button>
                </h5>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body" style="column-count:2">
                   
                        @foreach (var x in Model.TimeSlots)
                        {
                            
                                @if (x.TimeSlot.ToString("d") == "3/22/2021")
                                {
                                
                                    <form asp-action="TourSummary" method="post">
                                        <label asp-for="GroupInfo.SelectedAppointmentDay">@x.TimeSlot.ToShortTimeString()</label>
                                        <!--You can unhide this... it just shows the date multiple times, not super necessary-->
                                        <input asp-for="GroupInfo.SelectedAppointmentDay" value="@x.TimeSlot" name="SelectedTimeSlot" readonly hidden >
                                        <input class="btn btn-info" type="submit" value="Select Time" id="submit" />
                                    </form>
                                    <br/>

                                                                  
                                }
                           

                        }
                   
                </div>
            </div>
        </div>
